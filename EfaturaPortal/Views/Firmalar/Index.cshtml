@section Scripts
{
    <script>
        $(document).ready(function () {
            GetDataTable();
        });


        var GetDataTable = function () {

            var clmns = [
                { "data": null, visible: false },
                { "data": "unvani" },
                { "data": "vergiDairesi" },
                { "data": "vergiNumarasi" },
                { "data": "sehir" },
                { "data": "email" },
                {
                    data: null,
                    width: "210px",
                    className: "dt-center",
                    targets: -1,
                    orderable: false,
                    render: function (data, type, full, meta) {

                        return
                        '<button class="btn btn-info font-weight-bold btn-pill mr-2 seridenApp-datatables-update  min-w-90px" title="Düzenle" data-endpoint="Firmalar/Update" data-id="' +
                            full.id +
                            '">Güncelle</button>';




                    }
                }
            ];

            GetData("Firmalar/GetAll", "Firmalar/Create", "Firmalar/Update", clmns);

        };

        function datatableUpdate() {
            GetDataTable();
        }


    </script>

    <script src="~/js/Datatable/DataTable_GetData.js"></script>
    }